extends ../layouts/common.pug

block content

    h1 Users List

    .d-flex.align-items-center
        a.btn.btn-primary(href="/users/create") New
        form.d-flex.ml-auto(action="/users/search" method="GET")
            input(type="text", name="q", class="form-control")
            button.btn.btn-primary.ml-2 Search


    table.table
        tr
            th Name
            th Phone
            th Actions
        each user in users
            tr
                td= user.name   
                td= user.phone
                td
                    a(href="/users/" + user.id) view